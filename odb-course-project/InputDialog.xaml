<Window x:Class="odb_course_project.InputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="InputDialog" Height="150" Width="300">
    <Grid>
        <TextBlock Text="{Binding Prompt}" Margin="10" HorizontalAlignment="Left"/>
        <TextBox Text="{Binding Answer}" Margin="10,30,10,0" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10">
            <Button Content="OK" Width="60" Margin="5" Click="OKButton_Click"/>
            <Button Content="Cancel" Width="60" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
